---
import logoIcon from "../../public/Logo.png";
import telegramIcon from "../../public/telegram-icon.svg";
import XIcon from "../../public/x-icon.svg";
import linkedIn from "../../public/linkedin-icon.svg";
import { Image } from 'astro:assets';
---

<header>
	<nav>
		<a href="https://bouldertech.fi" target="_blank">
			<Image src={logoIcon} alt="BoulderTech Logo" width={160}></Image>
		</a>
		<div class="social-links">
			<a href="https://x.com/BoulderTechFi" target="_blank">
				<span class="sr-only">Follow BoulderTech on Twitter</span>
				<Image src={XIcon} alt="X Icon" width={36}/>
			</a>
			<a href="https://t.me/+I05vwrkKMe1jNzMx" target="_blank">
				<span class="sr-only">Join the BoulderTech telegram community</span>
				<Image src={telegramIcon} alt="Telegram Icon" width={36}/>
			</a>
			<a href="https://www.linkedin.com/company/bouldertechtoken/posts/?feedView=all" target="_blank">
				<span class="sr-only">Follow BoulderTech on LinkedIn</span>
				<Image src={linkedIn} alt="LinkedIn Icon" width={36}/>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #FFFFFF;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 0.75em 0.35em;
		color: var(--white-dark);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		display: flex;
		align-items: center;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
